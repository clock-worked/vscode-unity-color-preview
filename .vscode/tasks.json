{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "label": "npm: compile"
    },
    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation in watch mode...",
          "endsPattern": "Found [0-9]+ errors\. Watching for file changes\."
        }
      },
      "label": "npm: watch"
    }
  ]
}


